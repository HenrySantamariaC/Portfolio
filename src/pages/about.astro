---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import MainLayout from "../layouts/Main.layout.astro";
import photo1 from "/img/photo-1.jpg";
import photo2 from "/img/photo-2.jpg";
import Navigator from "../components/Navigator/Navigator.astro";
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="w-screen h-screen sm:p-5 bg-neutral-950">
    <MainLayout>
      <div
        class=`relative h-full w-full bg-photo-story bg-contain bg-no-repeat
		before:absolute before:top-0 before:h-full before:w-full before:bg-gradient-to-t from-30% from-neutral-900 to-neutral-900/50`
      >
        <div class="flex flex-col justify-between relative h-full text-white">
          <div class="flex flex-col justify-between p-5 h-full">
            <p class="text-center">@henry_sc</p>

            <div class="flex flex-col gap-5 items-end">
              <div class="text-end">
                <p class="text-2xl">Henry Santamaria C</p>
                <p class="text-xs">Junior Developer</p>
              </div>
              <div class="flex flex-col gap-4 w-full">
                <p>Recent Projects</p>
                <div class="flex gap-4">
                  <img
                    src={photo1}
                    alt="photo-1"
                    class="rounded-xl h-[180px] aspect-square"
                  />
                  <img
                    src={photo2}
                    alt="photo-2"
                    class="rounded-xl h-[180px] aspect-square"
                  />
                  <img
                    src={photo1}
                    alt="photo-1"
                    class="rounded-xl h-[180px] aspect-square"
                  />
                </div>
              </div>
            </div>
          </div>
          <Navigator />
        </div>
      </div>
    </MainLayout>
  </body>
</html>
